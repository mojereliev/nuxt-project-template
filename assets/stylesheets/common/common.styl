title-big()
  font-size 80px
  font-weight 800
  text-transform uppercase
  line-height (85 / 80)
  margin-left -.05em

  +tablet()
    font-size 60px

  +mobile()
    font-size 32px

title-medium()
  font-size 32px
  font-weight 800
  text-transform uppercase
  line-height (40 / 32)

  +mobile()
    font-size 24px

title-small()
  font-size 18px
  font-weight 600
  letter-spacing (1em / 18)
  text-transform uppercase
  line-height (22 / 18)

text-big()
  font-size 24px
  line-height (42 / 24)

  +mobile()
    font-size 18px

text-medium()
  font-size 18px
  line-height (29 / 18)

  +mobile()
    font-size 16px

text-small()
  font-size 16px
  line-height (26 / 16)

link-style()
  color currentColor
  transition opacity .3s ease, color .3s ease
  background none
  text-decoration none
  cursor pointer
  position relative
  -webkit-tap-highlight-color transparent
  opacity 1

  &.router-link-active
  &.nuxt-link-active
    opacity .4

  &:hover
    .page:not(.page_platform_mobile) &
      opacity .6

  &:disabled
    opacity .4
    cursor default

container()
  width 100%
  max-width 1130px
  padding-left $baseOffset
  padding-right $baseOffset
  margin-left auto
  margin-right auto

container-large()
  container()
  max-width 1310px

scroll()
  height 100%
  overflow hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch
